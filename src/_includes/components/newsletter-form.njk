{# Newsletter Form Component #}
{% macro newsletterForm(title = "Stay Updated", description = "Get the latest insights and updates delivered to your inbox", buttonText = "Subscribe") %}
<section class="newsletter-section">
  <div class="container">
    <div class="newsletter-form-wrapper">
      <div id="sf3z8be0439aa88f7d9d2e06629ed3cef8528f796b4ee3ea438a702efca5c732b4d5" data-type="signupform">
        <div id="customForm">
          <input type="hidden" id="recapTheme" value="0">
          <input type="hidden" id="isRecapIntegDone" value="false">
          <input type="hidden" id="recapMode" value="228681000000188082">
          <input type="hidden" id="signupFormType" value="LargeForm_Vertical">
          
          <div name="SIGNUP_PAGE" id="SIGNUP_PAGE" class="SIGNUP_PAGE large_form_11_css">
            <div id="signupMainDiv" style="margin: 0px auto; width: 100%;" name="SIGNUPFORM">
              <div>
                <div style="position:relative;">
                  <div id="Zc_SignupSuccess" style="display:none;position:absolute;margin-left:4%;width:90%;background-color: white; padding: 3px; border: 3px solid rgb(194, 225, 154); margin-top: 10px;margin-bottom:10px;word-break:break-all">
                    <table width="100%" cellpadding="0" cellspacing="0" border="0">
                      <tbody>
                        <tr>
                          <td width="10%">
                            <img class="successicon" src="https://ma.zoho.eu/images/challangeiconenable.jpg" align="absmiddle" alt="Success">
                          </td>
                          <td>
                            <span id="signupSuccessMsg" style="color: rgb(73, 140, 132); font-family: sans-serif; font-size: 14px;word-break:break-word">&nbsp;&nbsp;Thank you for subscribing!</span>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
                
                <form method="POST" id="zcampaignOptinForm" style="margin:0px;" action="https://lnba-zcmp.maillist-manage.eu/weboptin.zc" target="_zcSignup">
                  <div id="SIGNUP_BODY_ALL" name="SIGNUP_BODY_ALL">
                    <h2 id="SIGNUP_HEADING" name="SIGNUP_HEADING">{{ title }}</h2>
                    
                    <div id="SIGNUP_BODY" name="SIGNUP_BODY">
                      <div style="margin:0px auto;text-align:left;">
                        <div id="SIGNUP_DESCRIPTION">{{ description }}</div>
                        
                        <div style="display:none;background-color:#FFEBE8;padding:10px 10px; color:#d20000; font-size:11px; margin:10px 0px;border:solid 1px #ffd9d3; margin-top:20px;" id="errorMsgDiv">&nbsp;&nbsp;Please correct the marked field(s) below.</div>
                        
                        <div>
                          <div style="font-size:12px; margin-top:10px;" name="fieldsdivSf" class="zcsffieldsdiv">
                            
                            {# Email Field #}
                            <div style="padding:10px 0px 10px 0px;" class="zcsffield" fieldid="228681000000000015">
                              <div>
                                <div name="SIGNUP_FORM_LABEL">Email&nbsp;<span name="SIGNUP_REQUIRED">*</span></div>
                                <div style="width:100%; min-width:170px; margin-top:5px;">
                                  <input name="CONTACT_EMAIL" 
                                         type="email" 
                                         required="true" 
                                         maxlength="100"
                                         placeholder="Enter your email address"
                                         value="">
                                  <span style="display:none" id="dt_CONTACT_EMAIL">1,true,6,Lead Email,2</span>
                                </div>
                              </div>
                              <div style="clear:both"></div>
                            </div>
                            
                            {# First Name Field #}
                            <div style="padding:10px 0px 10px 0px;" class="zcsffield" fieldid="228681000000000019">
                              <div>
                                <div name="SIGNUP_FORM_LABEL">First Name&nbsp;<span name="SIGNUP_REQUIRED">*</span></div>
                                <div style="width:100%; min-width:170px; margin-top:5px;">
                                  <input name="FIRSTNAME" 
                                         type="text" 
                                         required="true" 
                                         maxlength="50"
                                         placeholder="Enter your first name"
                                         value="">
                                  <span style="display:none" id="dt_FIRSTNAME">1,true,1,First Name,2</span>
                                </div>
                              </div>
                              <div style="clear:both"></div>
                            </div>
                            
                            {# Last Name Field #}
                            <div style="padding:10px 0px 10px 0px;" class="zcsffield" fieldid="228681000000000021">
                              <div>
                                <div name="SIGNUP_FORM_LABEL">Last Name&nbsp;<span name="SIGNUP_REQUIRED">*</span></div>
                                <div style="width:100%; min-width:170px; margin-top:5px;">
                                  <input name="LASTNAME" 
                                         type="text" 
                                         required="true" 
                                         maxlength="50"
                                         placeholder="Enter your last name"
                                         value="">
                                  <span style="display:none" id="dt_LASTNAME">1,true,1,Last Name,2</span>
                                </div>
                              </div>
                              <div style="clear:both"></div>
                            </div>
                          </div>
                          
                          {# Captcha #}
                          <div name="captcha" style="" id="captcha">
                            <div style="width:302px;overflow:hidden;max-width:100%" class="recaptcha" id="recapDiv"></div>
                            <input type="hidden" id="secretid" value="6LdNeDUUAAAAAG5l7cJfv1AA5OKLslkrOa_xXxLs">
                          </div>
                          
                          <div id="REQUIRED_FIELD_TEXT" name="SIGNUP_REQUIRED">*Required fields</div>
                          
                          <div style="padding:10px; text-align:center;">
                            <input type="button" 
                                   action="Save" 
                                   id="zcWebOptin" 
                                   name="SIGNUP_SUBMIT_BUTTON"
                                   value="{{ buttonText }}">
                          </div>
                          
                          {# Hidden Zoho fields - DO NOT EDIT #}
                          <input type="hidden" id="fieldBorder" value="rgb(31, 61, 89)">
                          <input type="hidden" name="zc_trackCode" id="zc_trackCode" value="">
                          <input type="hidden" name="viewFrom" id="viewFrom" value="URL_ACTION">
                          <input type="hidden" id="submitType" name="submitType" value="optinCustomView">
                          <input type="hidden" id="lD" name="lD" value="">
                          <input type="hidden" name="emailReportId" id="emailReportId" value="">
                          <input type="hidden" name="zx" id="cmpZuid" value="14ae56ce3a">
                          <input type="hidden" name="zcvers" value="2.0">
                          <input type="hidden" name="oldListIds" id="allCheckedListIds" value="">
                          <input type="hidden" id="mode" name="mode" value="OptinCreateView">
                          <input type="hidden" id="zcld" name="zcld" value="">
                          <input type="hidden" id="zctd" name="zctd" value="132c70286be20159">
                          <input type="hidden" id="document_domain" value="marketingplus.zoho.eu">
                          <input type="hidden" id="zc_Url" value="lnba-zcmp.maillist-manage.eu">
                          <input type="hidden" id="new_optin_response_in" value="0">
                          <input type="hidden" id="duplicate_optin_response_in" value="0">
                          <input type="hidden" id="zc_formIx" name="zc_formIx" value="3z8be0439aa88f7d9d2e06629ed3cef8528f796b4ee3ea438a702efca5c732b4d5">
                        </div>
                      </div>
                      
                      <input type="hidden" id="isCaptchaNeeded" value="true">
                      <input type="hidden" id="superAdminCap" value="0">
                      <img src="https://lnba-zcmp.maillist-manage.eu/images/spacer.gif" onload="referenceSetter(this)" id="refImage" style="display:none;">
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{# Success Popup HTML #}
<div id="zcOptinOverLay" oncontextmenu="return false" style="display:none;text-align: center; background-color: rgb(0, 0, 0); opacity: 0.5; z-index: 100; position: fixed; width: 100%; top: 0px; left: 0px; height: 100vh;"></div>
<div id="zcOptinSuccessPopup" style="margin:0px auto;display:none;z-index: 9999;width: 800px; height:24%;top: 84px;position: fixed; left: 26%;background-color: #FFFFFF;border-color: #E6E6E6; border-style: solid; border-width: 1px; box-shadow: 0 1px 10px #424242;padding: 35px;">
  <span style="position: absolute;top: -16px;right: -14px;z-index:1;cursor: pointer;" onclick="closeSuccessPopup()">
    <img src="//campaigns.zoho.eu/images/videoclose.png" alt="Close">
  </span>
  <div id="zcOptinSuccessPanel"></div>
</div>
{% endmacro %}
