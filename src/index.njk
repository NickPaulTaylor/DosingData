{# --- Front Matter --- #}
---
title: Dosing Data Blog
layout: base.njk
permalink: /
---

{# Extend the base layout and import the postCard macro #}
{% extends "base.njk" %}
{% import "macros/post-card.njk" as cards %}

{% block content %}

  {# --- Hero Section Setup: Grab the pre-split heroPosts collection --- #}
  {% set hero = collections.heroPosts %}

  {# --- Render Hero Section Only If We Have Any Featured Posts --- #}
  {% if hero.center or hero.left | length > 0 or hero.right | length > 0 %}
    <div class="container">
      <section class="hero-section">

      <div class="hero-side hero-left">
        {% for p in hero.left %}
          {{ cards.postCard(p, 'small') }}
        {% endfor %}
      </div>

      <div class="hero-center-wrapper">
        {% if hero.center %}
          {{ cards.postCard(hero.center, 'large') }}
        {% endif %}
      </div>

      <div class="hero-side hero-right">
        {% for p in hero.right %}
          {{ cards.postCard(p, 'small') }}
        {% endfor %}
      </div>

    </section>
    <hr class="hero-separator">
  {% endif %}

  {# --- More Posts Grid --- #}
  <h2>More Posts</h2>
  <div class="post-grid">

    {# Build a list of URLs that were in the hero so we can exclude them #}
    {% set heroUrlsList = [] %}
    {% if hero.center %}
      {% set heroUrlsList = heroUrlsList + [hero.center.url] %}
    {% endif %}
    {% for p in hero.left %}
      {% set heroUrlsList = heroUrlsList + [p.url] %}
    {% endfor %}
    {% for p in hero.right %}
      {% set heroUrlsList = heroUrlsList + [p.url] %}
    {% endfor %}

    {# Loop through all posts, excluding any already displayed above #}
    {% for post in collections.posts %}
      {% if post.url not in heroUrlsList %}
        <article class="post-preview">
          <a href="{{ post.url | url }}" class="post-preview__link">

            {% if post.data.featuredImage %}
              <div class="post-preview__image-container">
                <img src="{{ post.data.featuredImage | url }}" alt="" class="post-preview__image">
              </div>
            {% endif %}

            <div class="post-preview__content">
              <h3 class="post-preview__title">{{ post.data.title }}</h3>
              {% if post.data.excerpt %}
                <p class="post-preview__excerpt">{{ post.data.excerpt }}</p>
              {% endif %}
              <time datetime="{{ post.date | htmlDateString }}" class="post-preview__date">
                {{ post.date | readableDate }}
              </time>
            </div>

          </a>
        </article>
      {% endif %}
    {% endfor %}

  </div>

{% endblock %}